{
    "include": ["src"], // ts -> js 변환을 위해 src 폴더를 전부 확인한다.
    "compilerOptions": {
        "outDir": "build", // js 파일이 생성될 경로
        // >> package.json에가서 build라는 새스크립트를 만들어야함
        "target": "ES6", // 변환될 JS 버전
        "lib": ["ES6", "DOM"], // js 코드가 어느 환경에서 동작할지 알려줌
        "strict": true, // 타입스크립트가 보호해줌,
        "allowJs": true, // ts안에 js를 더한다는 뜻 + call signature를 추론해줌
    },
}